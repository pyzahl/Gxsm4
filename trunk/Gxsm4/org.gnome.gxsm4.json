{
    "app-id" : "org.gnome.Gxsm4",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "41",
    "sdk" : "org.gnome.Sdk",
    "command" : "gxsm4",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
	"--socket=session-bus",
        "--socket=wayland",
        "--socket=fallback-x11",
	"--filesystem=host",
	"--socket=pulseaudio",
	"--device=all"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
	{
            "name": "glew",
            "no-autogen": true,
            "make-args": [
                "GLEW_PREFIX=${FLATPAK_DEST}",
                "GLEW_DEST=${FLATPAK_DEST}",
                "LIBDIR=${FLATPAK_DEST}/lib",
                "CFLAGS.EXTRA:=${CFLAGS} -fPIC",
                "LDFLAGS.EXTRA=${LDFLAGS}"
            ],
            "make-install-args": [
                "GLEW_PREFIX=${FLATPAK_DEST}",
                "GLEW_DEST=${FLATPAK_DEST}",
                "LIBDIR=${FLATPAK_DEST}/lib",
                "CFLAGS.EXTRA:=${CFLAGS} -fPIC",
                "LDFLAGS.EXTRA=${LDFLAGS}"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/project/glew/glew/2.2.0/glew-2.2.0.tgz",
                    "sha256": "d4fc82893cfb00109578d0a1a2337fb8ca335b3ceccf97b97e5cc7f08e4353e1"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "/lib/*.a"
            ]
  	},
        {
            "name" : "glm",
            "buildsystem" : "cmake",
            "sources" : [
                {
		    "type"   : "git",
		    "url"    : "https://github.com/g-truc/glm.git",
		    "branch" : "master"
                }
            ]
        },
        {
            "name" : "hdf5",
            "buildsystem" : "autotools",
            "sources" : [
                {
		    "type"   : "git",
		    "url"    : "https://github.com/HDFGroup/hdf5.git",
		    "branch" : "master"
                }
            ]
        },
        {
            "name" : "netcdf",
            "buildsystem" : "cmake",
            "sources" : [
                {
		    "type"   : "git",
		    "url"    : "https://github.com/Unidata/netcdf-c.git",
		    "branch" : "main"
                }
            ]
        },
        {
            "name" : "netcdf-cxx4",
            "buildsystem" : "autotools",
            "sources" : [
                {
                    "type"   : "archive",
		    "url"    : "https://downloads.unidata.ucar.edu/netcdf-cxx/4.2/netcdf-cxx-4.2.tar.gz",
                    "sha256" : "95ed6ab49a0ee001255eac4e44aacb5ca4ea96ba850c08337a3e4c9a0872ccd1"
                }
            ]
        },
        {
            "name" : "gsl",
            "buildsystem" : "cmake",
            "sources" : [
                {
		    "type"   : "git",
		    "url"    : "https://github.com/ampl/gsl.git",
		    "branch" : "master"
                }
            ]
        },
        {
            "name" : "gtksourceview",
            "buildsystem" : "meson",
            "sources" : [
                {
		    "type"   : "git",
		    "url"    : "https://gitlab.gnome.org/pyzahl/gtksourceview.git",
		    "branch" : "master"
                }
            ]
        },
        {
            "name" : "gxsm4",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type"   : "svn",
                    "url"    : "https://svn.code.sf.net/p/gxsm/svn/trunk/Gxsm4"
                }
            ]
        }
    ]
}
